# Open Host Factory Plugin REST API Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
VERSION=1.0.0
BUILD_DATE=2025-01-07T00:00:00Z
VCS_REF=main

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HF_SERVER_ENABLED=true
HF_SERVER_HOST=0.0.0.0
HF_SERVER_PORT=8000
HF_SERVER_WORKERS=1
HF_SERVER_LOG_LEVEL=info
HF_SERVER_DOCS_ENABLED=true
HF_SERVER_RELOAD=false

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
HF_AUTH_ENABLED=false
HF_AUTH_STRATEGY=none

# Bearer Token Authentication
HF_AUTH_BEARER_SECRET_KEY=your-very-secure-secret-key-change-this
HF_AUTH_BEARER_ALGORITHM=HS256
HF_AUTH_BEARER_TOKEN_EXPIRY=3600

# AWS Cognito Authentication
HF_AUTH_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
HF_AUTH_COGNITO_CLIENT_ID=your-cognito-client-id
HF_AUTH_COGNITO_REGION=us-east-1

# =============================================================================
# AWS PROVIDER CONFIGURATION
# =============================================================================
HF_PROVIDER_TYPE=aws
HF_PROVIDER_AWS_REGION=us-east-1
HF_PROVIDER_AWS_PROFILE=

# AWS Credentials (use IAM roles in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
# HostFactory Scheduler Directories
HF_PROVIDER_WORKDIR=
HF_PROVIDER_CONFDIR=
HF_PROVIDER_LOGDIR=

# Default Scheduler Directories
DEFAULT_PROVIDER_WORKDIR=
DEFAULT_PROVIDER_CONFDIR=
DEFAULT_PROVIDER_LOGDIR=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
HF_LOGGING_LEVEL=INFO
HF_LOGGING_CONSOLE_ENABLED=true
HF_LOGGING_FILE_ENABLED=true
HF_LOGGING_FILE_PATH=/app/logs/app.log

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
HF_STORAGE_STRATEGY=json
HF_STORAGE_BASE_PATH=/app/data

# JSON Storage Configuration
HF_STORAGE_JSON_TYPE=single_file
HF_STORAGE_JSON_FILENAME=request_database.json

# Database Configuration (if using database storage)
DATABASE_URL=
POSTGRES_DB=${PACKAGE_NAME_SHORT:-ohfp}
POSTGRES_USER=${PACKAGE_NAME_SHORT:-ohfp}
POSTGRES_PASSWORD=${PACKAGE_NAME_SHORT:-ohfp}_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HF_SERVER_REQUIRE_HTTPS=false
HF_SERVER_TRUSTED_HOSTS=*

# CORS Configuration
HF_CORS_ENABLED=true
HF_CORS_ORIGINS=*
HF_CORS_CREDENTIALS=false

# =============================================================================
# MONITORING AND DEBUGGING
# =============================================================================
HF_DEBUG=false
HF_METRICS_ENABLED=false

# External Services
EXTERNAL_SERVICE_URL=

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Data and logs paths for volume mounting
DATA_PATH=./data
LOGS_PATH=./logs

# Container resource limits
CONTAINER_MEMORY_LIMIT=1G
CONTAINER_CPU_LIMIT=2.0
